    <!-- Menú de Cursos dentro de EscuelaVela -->
    <menuitem name="Cursos" id="modulo_escuela_vela.curso_menu" parent="modulo_escuela_vela.menu_root" action="modulo_escuela_vela.curso_action_window"/>

