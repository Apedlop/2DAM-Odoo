    <!-- Menú de Alumnos dentro de EscuelaVela -->
    <menuitem name="Alumnos" id="modulo_escuela_vela.alumno_menu" parent="modulo_escuela_vela.menu_root" action="modulo_escuela_vela.alumno_action_window"/>

  </data>
</odoo>