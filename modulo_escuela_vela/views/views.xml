<odoo>
  <data>

    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="modulo_escuela_vela.escuela_list">
      <field name="name">modulo_escuela_vela.escuela.list</field>
      <field name="model">modulo_escuela_vela.escuela</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="telefono"/>
          <field name="email"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="modulo_escuela_vela.escuela_form">
      <field name="name">modulo_escuela_vela.escuela.form</field>
      <field name="model">modulo_escuela_vela.escuela</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
            <field name="name"/>
            <field name="direccion"/>
            <field name="telefono"/>
            <field name="email"/>
          </group>
          <group>
            <field name="logo" widget="image"/>
          </group>
        </form>
      </field>
    </record>
